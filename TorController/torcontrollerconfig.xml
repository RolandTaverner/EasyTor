<?xml version="1.0" encoding="UTF-8"?>
<document>
  <run>
      <daemon>0</daemon>

      <httpserver>
          <host>127.0.0.1</host>
          <port>30000</port>
          <timeout>10</timeout>
          <connectionlimit>300</connectionlimit>
          <httpthreads>2</httpthreads>
          <workerthreads>4</workerthreads>
          <statservicename>torcontroller</statservicename>
          <statservice>stat</statservice>
      </httpserver>

      <logger>
          <level>
              <all>
                  <file>
                      <name>x:\log.txt</name>
                  </file>
              </all>
          </level>
      </logger>
  </run>

  <debug>true</debug>

  <serviceconfig>
    <plugins>
      <plugin name="fileservice">
        <resource>/tor</resource>
        <options>
          <directory>x:\EasyTorExtension</directory>
        </options>
      </plugin>
    </plugins>

    <redirects>
      <redirect from="/" to="/tor/procs.html" with_status="308" />
      <redirect from="/favicon.ico" to="/tor/favicon.ico" with_status="308" />
    </redirects>
    
    <controller>
      <processes>
        <process name="tor">
          <root>x:\et\tor-win32-0.3.1.7</root>
          <executable>Tor\tor.exe</executable>
          <args>--quiet</args>
          <options>
            <scheme name="cmdline">
              <option name="torrc" type="string" list="no" system="yes" required="yes">
                <format>-f %VALUE%</format>
                <default>
                  <value>%CONFIGFILE%</value>
                </default>
              </option>

              <option name="OwningControllerProcess" type="string" list="no" system="yes" required="yes">
                <format>--__%NAME% %VALUE%</format>
                <default>
                  <value>%PID%</value>
                </default>
              </option>
            </scheme>

            <scheme name="config">
              <option name="HashedControlPassword" type="string" list="yes" system="yes"> <!-- required="yes" -->
                <format>%NAME% %VALUE%</format>
              </option>

              <option name="DataDirectory" type="string" list="no" system="yes" required="yes">
                <format>%NAME% %VALUE%</format>
                <default>
                  <value>%ROOTPATH%\Data\Tor</value>
                </default>
              </option>

              <option name="Log" type="string" list="no" system="yes" required="yes">
                <format>%NAME% %VALUE%</format>
                <default>
                  <value>notice file x:\et\notices.log</value>
                </default>
              </option>

              <option name="SafeLogging" type="domainvalue" list="no">
                <format>%NAME% %VALUE%</format>
                <type>
                  <domain>
                    <value>0</value>
                    <value>1</value>
                    <value>relay</value>
                  </domain>
                </type>
                <default>
                    <value>0</value>
                </default>
              </option>                        
            </scheme>
          </options>
        </process>
      </processes>
    </controller>
  </serviceconfig>

</document>